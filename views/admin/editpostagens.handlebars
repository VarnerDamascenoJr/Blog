{{#each erros}}
  <div class="alert alert-danger">
    {{texto}}
  </div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
      <h4>Editar Postagem:</h4>
      <form class="" action="/admin/postagemedit" method="POST">
        <input type="hidden" name="id" value="{{postagem._id}}">
        <label for="titulo" >Titulo:</label>
         <input type="text" class="form-control" name="titulo" value="{{postagem.titulo}}">
        <label for="slug" >Slug:</label>
         <input type="text" name="slug" class="form-control" value="{{postagem.slug}}">
        <label for="descricao">Descrição:</label>
         <input type="text" name="descricao" class="form-control" value="postagem.descricao">
        <label for="conteudo">Conteúdo:</label>
         <textarea name="conteudo" class="form-control" rows="8" cols="80">{{postagem.conteudo}}</textarea>
        <label for="categoria">Categoria:</label>
         <select class="custom-select" name="categoria">
           {{#each categorias}}
           <option value="{{_id}}">{{_nome}}</option>
           {{else}}
           <option value="0">Nenhuma categoria registrada</option>
           {{/each}}
         </select>
         <button type="submit" name="button" class="btn btn-success mt-3">Editar Postagem</button>

      </form>

    </div>
</div>
